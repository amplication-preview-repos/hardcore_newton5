datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Warehouse {
  capacity    Int?
  createdAt   DateTime    @default(now())
  id          String      @id @default(cuid())
  inventories Inventory[]
  location    String?
  manager     String?
  name        String?
  products    Product[]
  shipments   Shipment[]
  updatedAt   DateTime    @updatedAt
}

model Product {
  createdAt   DateTime    @default(now())
  description String?
  id          String      @id @default(cuid())
  inventories Inventory[]
  name        String?
  price       Float?
  quantity    Int?
  shipments   Shipment[]
  updatedAt   DateTime    @updatedAt
  warehouse   Warehouse?  @relation(fields: [warehouseId], references: [id])
  warehouseId String?
}

model Inventory {
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  product     Product?   @relation(fields: [productId], references: [id])
  productId   String?
  quantity    Int?
  updatedAt   DateTime   @updatedAt
  warehouse   Warehouse? @relation(fields: [warehouseId], references: [id])
  warehouseId String?
}

model Shipment {
  createdAt      DateTime            @default(now())
  id             String              @id @default(cuid())
  product        Product?            @relation(fields: [productId], references: [id])
  productId      String?
  shipmentDate   DateTime?
  status         EnumShipmentStatus?
  trackingNumber String?
  updatedAt      DateTime            @updatedAt
  warehouse      Warehouse?          @relation(fields: [warehouseId], references: [id])
  warehouseId    String?
}

enum EnumShipmentStatus {
  Option1
}
